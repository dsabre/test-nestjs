{% extends "../base.html.twig" %}

{% set pageTitle = 'Contatti' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block content %}
    <h1 class="text-3xl font-bold mb-4">
        {{ pageTitle }}
    </h1>

    <form method="post" class="space-y-3">
        <div class="column-1 md:columns-2 space-y-3">
            <div>
                <label for="firstName" class="font-bold">Nome *:</label>
                <input type="text" class="block border p-3 w-full" id="firstName" name="firstName" placeholder="Nome *" required>
            </div>
            <div>
                <label for="lastName" class="font-bold">Cognome *:</label>
                <input type="text" class="block border p-3 w-full" id="lastName" name="lastName" placeholder="Cognome *" required>
            </div>
        </div>

        <div>
            <label for="message" class="font-bold">Messaggio *:</label>
            <textarea class="block border p-3 w-full" id="message" name="message" rows="10" placeholder="Messaggio *"></textarea>
        </div>

        <div class="text-right">
            <button type="submit" class="border shadow p-3 rounded bg-gradient-to-br from-slate-600 to-slate-800 text-white w-full md:w-auto">
                Invia
            </button>
        </div>
    </form>
{% endblock %}